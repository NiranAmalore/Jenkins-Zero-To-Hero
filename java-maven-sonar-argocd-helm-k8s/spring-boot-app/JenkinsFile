pipeline {
  agent {
    docker {
      image 'maven:3.9.6-eclipse-temurin-17'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build and Test') {
      steps {
        dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
          sh '''
            rm -rf target || true
            mvn clean package
          '''
        }
      }
    }

    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://107.20.110.58:9000"
      }
      steps {
        dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
          withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
            sh '''
              mvn sonar:sonar \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=${SONAR_URL}
            '''
          }
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "niranamalore/ultimate-cicd:${BUILD_NUMBER}"
      }
      steps {
        dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
          script {

            sh '''
              apt-get update
              apt-get install -y docker.io
              docker --version
            '''

            sh 'docker build -t ${DOCKER_IMAGE} .'

            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
              dockerImage.push()
            }
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "niranamalore@gmail.com"
            git config user.name "Niran Amalore"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" \
            java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add .
            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || true
            git push https://${GITHUB_TOKEN}@github.com/NiranAmalore/Jenkins-Zero-To-Hero HEAD:main
          '''
        }
      }
    }

  }
}

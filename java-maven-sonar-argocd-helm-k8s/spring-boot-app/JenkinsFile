pipeline {

  agent {
    docker {
      image 'docker:26.1.3-cli'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
      reuseNode true
    }
  }

  options {
    skipDefaultCheckout(true)
  }

  environment {
    REPO_URL  = "https://github.com/NiranAmalore/Jenkins-Zero-To-Hero.git"
    APP_DIR   = "java-maven-sonar-argocd-helm-k8s/spring-boot-app"
    IMAGE_NAME = "niranamalore/ultimate-cicd"
  }

  stages {

    stage('Install Build Tools') {
      steps {
        sh '''
          apk update
          apk add --no-cache maven openjdk17 git
          java -version
          mvn -version
          docker --version
        '''
      }
    }

    stage('Checkout (inside container)') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            rm -rf Jenkins-Zero-To-Hero
            git clone https://${GITHUB_TOKEN}@github.com/NiranAmalore/Jenkins-Zero-To-Hero.git
            cd Jenkins-Zero-To-Hero
            git checkout main
          '''
        }
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          cd Jenkins-Zero-To-Hero/${APP_DIR}
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://107.20.110.58:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd Jenkins-Zero-To-Hero/${APP_DIR}
            mvn sonar:sonar \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "${IMAGE_NAME}:${BUILD_NUMBER}"
      }
      steps {
        script {
          sh '''
            cd Jenkins-Zero-To-Hero/${APP_DIR}
            docker build -t ${DOCKER_IMAGE} .
          '''
          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            cd Jenkins-Zero-To-Hero

            git config user.email "niranamalore@gmail.com"
            git config user.name "NiranAmalore"

            sed -i "s|\\(image: .*:\\).*|\\1${BUILD_NUMBER}|" \
              java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            if git diff --cached --quiet; then
              echo "No changes to commit. Skipping Git push."
              exit 0
            fi

            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/NiranAmalore/Jenkins-Zero-To-Hero.git main
          '''
        }
      }
    }
  }
}
